<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/putih"
    tools:context=".DoneActivity">



    <ImageView
        android:id="@+id/img"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/centang" />

    <TextView
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:gravity="center"
        android:text="TERIMAKASIH"
        android:textColor="@color/hitam"
        android:textSize="17sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"
        android:gravity="center"
        android:text="Kami akan segera menghubungi Anda"
        android:textColor="@color/hitam"
        android:textSize="17sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pinktua"

            android:orientation="vertical"

            android:padding="5dp">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:id="@+id/GambarDokter"
                android:src="@drawable/payment2" />


            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="dr umum - Periksa dan Resep"
                android:id="@+id/detailpesanan"
                android:textColor="@color/putih"
                android:gravity="fill"
                android:layout_toRightOf="@+id/GambarDokter"
                android:layout_toEndOf="@+id/GambarDokter" />

            <TextView
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="dr umum - Periksa dan Resep"
                android:gravity="fill"
                android:id="@+id/detailharga"
                android:textColor="@color/putih"
                android:layout_below="@+id/detailpesanan"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/GambarDokter"
                android:layout_toEndOf="@+id/GambarDokter" />




        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>